entrypoint = "main.py"
modules = ["nodejs-20", "python-3.11"]
hidden = ["venv", ".pythonlibs", "frontend/node_modules", "frontend/.next"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["bash", "frontend/deployment-start.sh"]
deploymentTarget = "gce"
ignorePorts = false

[[ports]]
localPort = 8080
externalPort = 80
exposeLocalhost = true

[env]
NEXT_PUBLIC_API_URL = "https://startup-ecosystem-api-production.up.railway.app"