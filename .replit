entrypoint = "main.py"
modules = ["nodejs-20", "python-3.11"]
hidden = ["venv", ".pythonlibs", "frontend/node_modules", "frontend/.next"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "set -eux; cd frontend; node -v; npm -v; npm ci || npm install; npm run build; export NODE_ENV=production; PORT=${PORT:-8080}; echo 'Starting Next on 0.0.0.0:'$PORT; npx next start -H 0.0.0.0 -p $PORT"]
deploymentTarget = "gce"
ignorePorts = false

[[ports]]
localPort = 8080
externalPort = 80
exposeLocalhost = true

[env]
NEXT_PUBLIC_API_URL = "https://startup-ecosystem-api-production.up.railway.app"