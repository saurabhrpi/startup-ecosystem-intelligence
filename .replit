entrypoint = "main.py"
modules = ["nodejs-20", "python-3.11"]
hidden = ["venv", ".pythonlibs", "frontend/node_modules", "frontend/.next"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd frontend && npm install && npm run build && export NODE_ENV=production HOST=0.0.0.0 PORT=${PORT:-8080} && echo Using PORT=$PORT HOST=$HOST && npm run start"]
deploymentTarget = "gce"
ignorePorts = false

[[ports]]
localPort = 8080
externalPort = 80
exposeLocalhost = true

[env]
NEXT_PUBLIC_API_URL = "https://startup-ecosystem-api-production.up.railway.app"